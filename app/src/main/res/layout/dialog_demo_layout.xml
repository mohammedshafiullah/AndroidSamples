<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/dialog_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Custom dialog Custom dialog Custom dialog Custom dialog Custom dialog Custom dialog Custom dialog Custom dialog Custom dialog Custom dialog Custom dialog Custom dialog Custom dialog Custom dialog "

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/dialog_info">

        <Button
            android:id="@+id/custom_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:background="@color/colorPrimary"
            android:onClick="onClick"
            android:text="Cancel"/>

        <Button
            android:id="@+id/custom_dialog_agree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:background="@color/colorAccent"
            android:onClick="onClick"
            android:text="Agree"/>
    </LinearLayout>


</RelativeLayout>
