<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="@dimen/commonMargin"
android:orientation="vertical"

tools:context="com.example.mohammedshafiullah.androiddemo.Shared_Preference_Activity">

<EditText
    android:id="@+id/shared_nameET"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="please enter Name"
    android:imeOptions="actionNext"
    android:inputType="text"

    />

<EditText
    android:id="@+id/shared_AddressET"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="please enter Address"
    android:imeOptions="actionDone"
    android:layout_marginTop="@dimen/commonMargin"
    android:inputType="text"


    />

<Button
    android:id="@+id/shared_submitBT"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp"
    android:text="Submit"
    android:layout_marginLeft="120dp"
    />

    <Button
        android:id="@+id/shared_deleteBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Delete"
        android:layout_marginLeft="120dp"
        />

</LinearLayout>
